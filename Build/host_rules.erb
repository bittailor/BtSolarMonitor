
ccflags = -Wall -Werror=return-type -g -O0 -D_GLIBCXX_USE_NANOSLEEP=1 -D_GLIBCXX_USE_SCHED_YIELD=1 -DUSE_NAMED_SEMAPHORES -DARDUINO=10609 -DARDUINO_HOST_COMPILE
cxxflags = -Wall -Werror=return-type -std=c++11 -g -O0  -D_GLIBCXX_USE_NANOSLEEP=1 -D_GLIBCXX_USE_SCHED_YIELD=1 -DARDUINO=10609 -DARDUINO_HOST_COMPILE
global_includes = -I/opt/local/include
linkflags = -pthread

rule cc
  command = <%= $cc %> -MMD -MT $out -MF $out.d $ccflags $flags $global_includes $includes -c $in -o $out
  description = CC $out
  depfile = $out.d

rule cxx
  command = <%= $cxx %> -MMD -MT $out -MF $out.d $cxxflags $flags $global_includes $includes -c $in -o $out
  description = CXX $out
  depfile = $out.d

rule ar
  command = rm -f $out && ar crs $out $in
  description = AR $out

rule link
  command = <%= $cxx %> -o $out $in $libs $linkflags
  description = LINK $out
